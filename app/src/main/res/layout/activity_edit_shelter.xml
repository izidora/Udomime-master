<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jmn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/editShelterPic"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/addpicture" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editNameShelter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:hint="Ime"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbarTrackVertical="@null"
            android:singleLine="true"
            android:textColorHighlight="@color/blueMain"
            android:textColorLink="@color/blueMain"
            android:textSize="14sp"
            android:theme="@style/InputTextTheme" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editPhoneShelter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Broj telefona"
                android:textColorHighlight="@color/blueMain"
                android:textColorLink="@color/blueMain"
                android:textSize="14sp"
                android:theme="@style/InputTextTheme"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editEmailShelter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHighlight="@color/blueMain"
                android:textColorLink="@color/blueMain"
                android:textSize="14sp"
                android:theme="@style/InputTextTheme"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editAdressShelter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresa"
            android:singleLine="false"
            android:textColorHighlight="@color/blueMain"
            android:textColorLink="@color/blueMain"
            android:textSize="14sp"
            android:theme="@style/InputTextTheme" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editCityShelter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Grad"
                android:textColorHighlight="@color/blueMain"
                android:textColorLink="@color/blueMain"
                android:textSize="14sp"
                android:theme="@style/InputTextTheme" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ediZupanijaShelter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Zupanija"
                android:textColorHighlight="@color/blueMain"
                android:textColorLink="@color/blueMain"
                android:textSize="14sp"
                android:theme="@style/InputTextTheme" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editGiroShelter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Žiro račun"
            android:singleLine="false"
            android:textColorHighlight="@color/blueMain"
            android:textColorLink="@color/blueMain"
            android:textSize="14sp"
            android:theme="@style/InputTextTheme" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/editAnimalsShelter"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:paddingLeft="100px"
        android:paddingRight="100px"
        android:text="Uredi životinje"
        android:textSize="12sp" />

    <Button
        android:id="@+id/saveShelter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/blueMain"
        android:paddingLeft="100px"
        android:paddingRight="100px"
        android:text="Unesi" />
    </LinearLayout>

</ScrollView>